#!/bin/bash

sudo true
bash ./WinToGrub
until git clone https://aur.archlinux.org/yay-bin.git && cd yay-bin && makepkg -si --noconfirm && cd .. && rm -rf yay-bin; do
  rm -rf yay-bin
  sleep 1
done

until yay -Sy --needed --batchinstall --removemake --nodiffmenu $(cat pkg | egrep -v "^\s*(#|$)"); do
  sleep 1
done

sh install/app
sh install/config
